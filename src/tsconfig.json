{
	"compilerOptions": {
        "noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"target": "es5",
		"module": "umd",
		"moduleResolution": "node",
		"sourceMap": true,
        "noUnusedParameters": false,
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "../lib/umd",
		"declaration": true,
		"lib": [
			"es5",
			"es2015.promise"
		],
		"strict": true
	},
    "exclude": [
        "node_modules"
    ]
}